FROM pytorch/pytorch:2.5.1-cuda12.1-cudnn9-runtime

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY deploy/requirements.base.txt deploy/requirements.base.txt
RUN pip install -U pip && pip install -r deploy/requirements.base.txt && pip install faiss-cpu==1.9.0.post1

COPY . .

CMD ["python", "-m", "src.cli", "--help"]
